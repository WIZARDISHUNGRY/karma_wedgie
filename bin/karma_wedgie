#!/usr/bin/env ruby

$:.unshift File.join(File.dirname(__FILE__), *%w[.. lib])
require 'rubygems'
require 'karma_wedgie'
require 'highline/import'

def get_secret(prompt="Password regexp:")
   ask(prompt) {|q| q.echo = false}
end

kw = KarmaWedgie.new
kw.list
exit
while line = get_secret
  kw.query line
end


